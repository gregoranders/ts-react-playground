{
  "root": true,
  "extends": ["eslint:recommended", "plugin:react/recommended", "esnext"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true
  },
  "globals": {
    "document": true,
    "module": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
